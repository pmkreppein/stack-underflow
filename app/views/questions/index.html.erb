
<% @questions.each do |q| %>
  <div class="box">
  <div class="columns">
    <div class="column is-one-quarter">
   <span class="tag is-info"><%= q.created_at.to_formatted_s(:short) %></span> 
     <%= q.user.name %> asked:
    </div>
    <div class="column is-three-quarters">
        <div class="content"><p><%= link_to( q.question_text, question_path(q)) %></p></div>
    </div>
  </div>



  </div>

<% end %>
